<div class="modal fade" tabindex="-1" id="review-add-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-white bg-dark">
                <h3 class="modal-ttle"><b>Add Review</b></h3>
                <button type="button" class="btn-close btn text-white" data-bs-dismiss="modal" aria-label="Close">Close</button>
            </div>
            <div class="modal-body text-white bg-dark">
                <form action="/review/add" method="POST">
                    <div class="mb-3">
                        <label for="Rating" class="form-label">Rating:</label>
                        <input type="number" maxlength="10" minlength="0" class="form-control" id="Rating" name="title">
                    </div>
                    <div class="mb-3">
                        <label for="Review" class="form-label">Leave a Review:</label>
                        <!-- <input type="textarea" class="form-control" id="Review" name="review"> -->
                        <textarea class="form-control form-floating" name="review" id="Review" cols="30" rows="10"></textarea>
                    </div>
                    <div>
                        <button id="submit_button" class="btn btn-primary" type="submit">Add Review</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function showAddReview(){
        let EVENT_MODAL = new bootstrap.Modal(document.getElementById('review-add-modal'));
        EVENT_MODAL.show();
    }
</script>